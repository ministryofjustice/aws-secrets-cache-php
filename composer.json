{
  "name": "ministryofjustice/aws-secrets-cache-php",
  "description": "AWS Secrets Manager caching for PHP (Laminas, APCu cache storage, ENV-prefixed secrets).",
  "prefer-stable": true,
  "minimum-stability": "dev",
  "keywords": ["aws", "secrets manager", "laminas", "cache"],
  "require": {
    "php": "^8.1",
    "aws/aws-sdk-php": "^3.198 || ^3.300",
    "laminas/laminas-cache": "^4.1"
  },
  "autoload": {
    "psr-4": {
      "MoJ\\AwsSecretsCache\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MoJ\\AwsSecretsCache\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse --memory-limit=1G",
    "cs": "phpcs -s"
  },
  "config": {
    "sort-packages": true
  }
}
